@model MassagerApp.PL.ViewModels.MassagePagedViewModel

<div class="list-group">
    @foreach (var item in Model.Massages)
    {

        <div class="card">
            <div id="@item.OwnerId" class="card-body">
                <h5 class="card-title">@item.UserName</h5>
                <p class="card-text">
                    @Html.Raw(item.Massage)
                </p>
            </div>
            <div class="card-body">
                <div class="reply-container">
                    <button class="btn btn-primary" onclick="showHideReplyForm(this)">Reply</button>
                    <form id="replyForm" style="display: none;" method="post" action="~/massage/replay">
                        <input type="hidden" name="UserName" value="@item.UserName" />
                        <input type="hidden" name="ChatId" value="@item.ChatId" />
                        <textarea rows="3" class="form-control" required name="Massage" placeholder="Input your reply..."></textarea>
                        <input type="submit" value="Add" class="btn btn-success" />
                    </form>
                </div>
                @if (@item.UserName == User.Identity.Name)
                {
                <div class="reply-container">
                    <form method="post" asp-action="Delete" asp-route-id="@item.MassegeId" class="btn-group-sm">
                        <input type="hidden" asp-for="@item.MassegeId" />
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Delete for everyone?')" />
                    </form>
                </div>
                <div class="reply-container">
                    <form method="post" asp-action="SoftDelete" asp-route-id="@item.MassegeId" class="btn-group-sm">
                        <input type="hidden" asp-for="@item.MassegeId" />
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Delete for you?')" />
                    </form>
                </div>
                }
            </div>
        </div>

    }

    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

</div>
<div class="btn-group" role="group" aria-label="Page">
    @if (Model.Page > 1)
    {
        <a type="button"
           href="@Url.Action("Index", "Massage", new { id = Model.Massages.FirstOrDefault().ChatId, page = Model.Page - 1 })"
           class="btn btn-outline-primary">Previous</a>}

    @if (Model.TotalCount > Model.PageSize * Model.Page)
    {
        <a type="button"
           href="@Url.Action("Index", "Massage", new { id = Model.Massages.FirstOrDefault().ChatId,page = Model.Page + 1})"
           class="btn btn-primary">Next</a>}
</div>