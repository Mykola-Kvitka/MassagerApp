@model MassagerApp.PL.ViewModels.MassagePagedViewModel

<div class="list-group">
    @foreach (var item in Model.Massages)
    {

        <div class="card">
            <div id="@item.OwnerId" class="card-body">
                <h5 class="card-title">@item.OwnerId</h5>
                <p class="card-text">
                    @Html.Raw(item.Massage)
                </p>
            </div>
            <div class="card-body">
                <div class="reply-container">
                    <button class="btn btn-primary" onclick="showHideReplyForm(this)">Reply</button>
                    <form id="replyForm" style="display: none;" method="post" action="~/massage/replay">
                        <input type="hidden" name="ParentId" value="@item.OwnerId" />
                        <input class="form-control" required name="AuthorName" placeholder="Input your name..." />
                        <textarea rows="3" class="form-control" required name="Body" placeholder="Input your reply..."></textarea>
                        <input type="submit" value="Add" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>

}
</div>
<div class="btn-group" role="group" aria-label="Page">
    @if (Model.Page > 1)
    {
        <a type="button"
           href="@Url.Action("Articles", "Admin", new { page = Model.Page - 1 })"
           class="btn btn-outline-primary">Previous</a>}

    @if (Model.TotalCount > Model.PageSize * Model.Page)
    {
        <a type="button"
           href="@Url.Action("Articles", "Admin", new { page = Model.Page + 1 })"
           class="btn btn-primary">Next</a>}
</div>